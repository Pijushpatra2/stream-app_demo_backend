#########################################
# SERVER CONFIGURATION
#########################################

# Port your Node.js server will run on
PORT=5000

# Environment type: development, production, or test
NODE_ENV=development

#########################################
# DATABASE CONFIGURATION
#########################################

# Primary database host (write operations)
DB_HOST=127.0.0.1

# Read-replica database host (optional, for replication)
DB_READ_HOST=127.0.0.1

# Database port (default MySQL port is 3306)
DB_PORT=3306

# Database username
DB_USER=root

# Database password
DB_PASS=

# Database name
DB_NAME=myappdb

#########################################
# JWT AUTHENTICATION
#########################################

# Secret key to sign JSON Web Tokens
JWT_SECRET=supersecretkey

# JWT expiration time (e.g., 1d = 1 day, 2h = 2 hours)
JWT_EXPIRES_IN=1d

#########################################
# PASSWORD HASHING
#########################################

# Number of salt rounds for bcrypt (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

#########################################
# FRONTEND / CLIENT
#########################################

# URL of your frontend application (used for CORS, redirects, email links)
CLIENT_URL=http://localhost:3000

#########################################
# OPTIONAL VARIABLES FOR PRODUCTION
#########################################

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Email service configuration (for sending emails)
EMAIL_SERVICE=Gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Redis URL (for caching or session management)
REDIS_URL=redis://localhost:6379

# Secret for signing cookies (if using cookies)
COOKIE_SECRET=supersecretcookiesignkey

# CORS allowed origin (frontend URL)
CORS_ORIGIN=http://localhost:3000
